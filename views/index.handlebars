<nav class="navbar navbar-expand-md navbar-light bg-light py-5">
    <a class="navbar-brand mx-auto ml-md-4" href="#"><span id="game-name">JavaScript Quiz</span> {<i id="javascript-icon" class="fab fa-js-square"></i>}</a>
    <nav class="navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mr-md-5">
            <li class="nav-item mx-auto">
                <div class="">
                    <button id="highscore-button" type="button" class="btn btn-primary" data-toggle="modal" data-target="#scoreModal">High Scores</button>
                </div>
            </li>
        </ul>
    </nav>
</nav>

<div id="stats-wrapper" class="py-5">
    <div id="timer" class="text-center">
        <span id="min"></span>
        <span class="colon">:</span>
        <span id="sec"></span>
        <span class="colon">:</span>
        <span id="hundredthsec"></span>
    </div>

    <div id="scores" class="text-center">      
        <span id="correct" class="correct"><i class="fas fa-thumbs-up"></i> --</span>
        <span id="incorrect" class="incorrect"><i class="fas fa-thumbs-down"></i> --</span>     
    </div>
</div>

<div id="main-container" class="container text-center">
    <button type="button" id="instructions-button" class="btn btn-secondary mb-3 mt-5" data-toggle="modal" data-target="#instructionsModal">Instructions <i class="fas fa-info-circle"></i></button>
    <div id="content-container" class="container">
    </div>
    <div id="question-box" class="container mb-5">  
    </div>
    <button type="button" id="reset-button" class="btn btn-secondary btn-lg">RESET <i class="fas fa-undo-alt"></i></button>
    <hr class="mb-5">
    <div class="mb-5">
        <a class="game-link mb-5" href="/algorithms">Algorithms Quiz <i class="fas fa-long-arrow-alt-right"></i></a>
    </div>
    <hr class="mb-5">
</div>

<!--High Score Modal-->
<div class="modal fade" id="scoreModal" tabindex="-1" aria-labelledby="scoreModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <section class="modal-header">
                <h3 class="modal-title" id="scoreModalLabel">High Scores</h3>
            </section>
            <div class="modal-body">
                <!--<p id="highscore-output"></p>-->
                <ol>
                    {{#each scores}}
                        <li>{{name}}: {{score}}</li>
                    {{/each}}
                </ol>
                <button type="button" class="btn btn-primary btn-lg btn-block mt-4" data-dismiss="modal" aria-label="Close">
                    Got It <i class="fa fa-check ml-1"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!--Score Submitted Modal-->
<div class="modal fade" id="scoreSubmittedModal" tabindex="-1" aria-labelledby="scoreSubmittedModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <section class="modal-header">
                <h3 class="modal-title" id="scoreSubmittedModalLabel">Success!</h3>
            </section>
            <div class="modal-body text-center">
                <h5 id="submitscore-modalbody">Score Saved!</h5>
                <button type="button" class="btn btn-primary btn-lg btn-block mt-4" data-dismiss="modal" aria-label="Close">
                    Got It <i class="fa fa-check ml-1"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!--Instructions Modal-->
<div class="modal fade" id="instructionsModal" tabindex="-1" aria-labelledby="instructionsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <section class="modal-header">
                <h4 class="modal-title" id="instructionsModalLabel">Instructions <i class="fas fa-info-circle"></i></h4>
            </section>
            <div class="modal-body">
                <p>
                    When the Start Timer button is pressed, a timer is set for 90 seconds.
                </p>
                <p>
                    Answer as many questions correctly as you can. Each time you select an 
                    incorrect answer, 5 seconds will be deducted from the timer. 
                </p>
                <p>
                    At the end of the game, you have the option of submitting your score.
                    The number of incorrect answers will be deducted from your final score.
                </p>
                <button type="button" class="btn btn-primary btn-lg btn-block mt-4" data-dismiss="modal" aria-label="Close">
                    Got It <i class="fa fa-check ml-1"></i>
                </button>
            </div>
        </div>
    </div>
</div>

